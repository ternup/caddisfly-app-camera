<resources>

    <!-- note: to re-use an existing Android attribute not already used by the superclass, name should have prefix "android:" and do not define a format -->
    <declare-styleable name="NumberPickerPreference">
        <attr name="android:summary"/>
        <attr name="android:max"/>
        <attr name="min" format="integer"/>
        <attr name="interval" format="integer"/>
    </declare-styleable>
    <declare-styleable name="FlatButton">
        <attr name="text2" format="string"/>
    </declare-styleable>

    <declare-styleable name="SpeedometerView">
        <attr name="maxSpeed" format="float"/>
        <attr name="speed" format="float"/>
        <attr name="labelTextSize" format="dimension"/>
    </declare-styleable>

    <attr name="backgroundColor" format="color"/>
    <attr name="windowBackground" format="reference|color"/>
    <attr name="drawerBackground" format="reference|color"/>
    <attr name="textColor" format="color"/>
    <attr name="drawerText" format="reference|color"/>
    <attr name="drawerSelector" format="reference"/>
    <attr name="listSelector" format="reference"/>
    <attr name="cardBackground" format="reference"/>
    <attr name="buttonStyle" format="color"/>
    <attr name="subtitleTextColor" format="color"/>
    <attr name="listButton" format="color"/>
    <attr name="arrowRight" format="reference"/>
    <attr name="drink" format="integer"/>
    <attr name="cook" format="integer"/>
    <attr name="bath" format="integer"/>
    <attr name="wash" format="integer"/>
    <attr name="alarm" format="integer"/>
    <attr name="sendIcon" format="reference"/>
    <attr name="deleteIcon" format="reference"/>

    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference"/>
        <attr name="metaButtonBarButtonStyle" format="reference"/>
    </declare-styleable>

</resources>
