<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
                android:shape="rectangle"
                android:dither="true">
            <corners android:radius="2dp"/>
            <solid android:color="#fffffbfb"/>
        </shape>
    </item>
    <item android:bottom="2dp">
        <shape
                android:shape="rectangle"
                android:dither="true">
            <corners android:radius="2dp"/>
            <solid android:color="#fffaf4e8"/>
            <padding
                    android:bottom="8dp"
                    android:left="8dp"
                    android:right="8dp"
                    android:top="8dp"/>
        </shape>
    </item>
</layer-list>
