<resources>

    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar"/>

    <style name="ActionBar.Light" parent="@style/ActionBar">
        <item name="android:background">@color/panel_light</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
    </style>

    <style name="ActionBar.Dark" parent="@style/ActionBar">
        <item name="android:background">@drawable/ab_transparent</item>
    </style>

    <style name="AppTheme.Light" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Light</item>
        <item name="backgroundColor">@color/window_background_light</item>
        <item name="windowBackground">@drawable/gradient</item>
        <item name="drawerBackground">@color/panel_light</item>
        <item name="textColor">@color/textColorLight</item>
        <item name="drawerText">@color/list_text_light</item>
        <item name="drawerSelector">@drawable/drawer_item_light</item>
        <item name="listSelector">@drawable/list_selector_light</item>
        <item name="cardBackground">@drawable/card</item>
        <item name="subtitleTextColor">@color/subtitle_light</item>
        <item name="buttonStyle">@drawable/button_style_light</item>
        <item name="listButton">@drawable/list_button_style_light</item>
        <item name="arrowRight">@drawable/arrow_right_light</item>
        <item name="alarm">@drawable/alarm_light</item>
        <item name="listCard">@drawable/list_card_light</item>
    </style>

    <style name="AppTheme.Dark" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBar.Dark</item>
        <item name="backgroundColor">@color/window_background_dark</item>
        <item name="windowBackground">@drawable/ab_transparent</item>
        <item name="drawerBackground">@color/panel_dark</item>
        <item name="textColor">@color/textColorDark</item>
        <item name="drawerText">@color/list_text_dark</item>
        <item name="drawerSelector">@drawable/list_selector_dark</item>
        <item name="listSelector">@drawable/list_selector_dark</item>
        <item name="cardBackground">@drawable/card_dark</item>
        <item name="subtitleTextColor">@color/subtitle_dark</item>
        <item name="buttonStyle">@drawable/button_style_dark</item>
        <item name="listButton">@drawable/button_style_dark</item>
        <item name="arrowRight">@drawable/arrow_right</item>
        <item name="alarm">@android:drawable/ic_lock_idle_alarm</item>
        <item name="listCard">@drawable/list_card_dark</item>
    </style>

    <color name="subtitle_light">#ff333333</color>
    <color name="subtitle_dark">#ffaed4d0</color>

    <style name="spinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton"/>

</resources>
