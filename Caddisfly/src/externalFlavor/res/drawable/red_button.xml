<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#ff008780" />
            <stroke
                    android:width="1dp"
                    android:color="#ff00837b" />
            <corners
                    android:radius="5dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#00A79D"
                    android:endColor="#00A79D"
                    android:angle="270" />
            <stroke
                    android:width="1dp"
                    android:color="#00A79D" />
            <corners
                    android:radius="5dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>