<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="@drawable/home_logo"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:alpha="0.9"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/appName"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:textStyle="normal"
            tools:ignore="SpUsage,UnusedAttribute" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:contentDescription="@null"
            android:gravity="center"
            android:singleLine="false"
            android:src="@drawable/logo"
            android:textIsSelectable="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/waterQualitySystem"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="SpUsage,UnusedAttribute" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:alpha="0.5"
            android:background="#dd746e64" />

        <TextView
            android:id="@+id/textVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="SpUsage,UnusedAttribute" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAboutCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#bb437e41"
        android:clickable="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ff7700" />

        <ImageView
            android:id="@+id/organizationImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            android:src="@drawable/akvo" />
    </LinearLayout>
</FrameLayout>

