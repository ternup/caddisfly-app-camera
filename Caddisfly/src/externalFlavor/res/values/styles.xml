<resources>

    <!-- Light Styles -->

    <style name="Theme.AppCompat.Light.DarkActionBar" parent="@android:style/Widget.Holo.ActionBar" />

    <style name="Widget.AppCompat.Base.ActionBar" parent="" />

    <style name="Widget.AppCompat.Base.ActionBar.Solid" parent="ActionBar" />

    <style name="Widget.AppCompat.ActionBar.Solid" parent="Widget.AppCompat.Base.ActionBar.Solid" />

    <style name="Flow.ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_flow</item>
        <item name="android:titleTextStyle">@style/Flow.ActionBar.Text</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.Base.ActionBar.Title" parent="android:TextAppearance.Medium">
        <item name="android:textSize">@dimen/abc_action_bar_title_text_size</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.Base.ActionBar.Title" />

    <style name="Flow.ActionBar.Text" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/orange_main</item>
    </style>

    <style name="Flow.ListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/white</item>
    </style>


    <!-- Dark Styles -->
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar" />

    <style name="ActionBar.Dark" parent="@style/ActionBar">
        <item name="android:background">@color/panel_light</item>
        <item name="android:titleTextStyle">@style/TitleColor</item>
    </style>

    <style name="TitleColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="MenuStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/menuTextSize</item>
    </style>

    <style name="AppTheme.Light" parent="@android:style/Theme.Holo"></style>

    <style name="button_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/bigButtonTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#777</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:alpha">0.7</item>
    </style>
</resources>
