<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Light Theme -->
    <style name="Flow.Theme" parent="android:Theme.Holo.Light">

        <item name="android:actionBarStyle">@style/Flow.ActionBar</item>
        <item name="android:actionMenuTextAppearance">@style/MenuStyle</item>
        <item name="android:actionMenuTextColor">@color/text_color_green</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="arrowRight">@drawable/arrow_right_light</item>
        <item name="alarm">@android:drawable/ic_lock_idle_alarm</item>
        <item name="minute">@drawable/minute</item>
        <item name="buttonStyle">@drawable/button_style_dark</item>

        <item name="android:windowBackground">@color/background_main</item>
        <item name="android:listViewStyle">@style/Flow.ListView</item>

        <!-- Text -->
        <item name="textColorPrimary">@color/text_color_black</item>
        <item name="textColorSecondary">@color/text_color_orange</item>
        <item name="textColorTertiary">@color/text_color_blue</item>

        <!-- Background -->
        <item name="listitem_bg1">@drawable/listitem_row_1</item>
        <item name="listitem_bg2">@drawable/listitem_row_2</item>
    </style>

    <style name="Flow.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:listViewStyle">@style/Flow.ListView</item>
    </style>

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBar.Dark</item>
        <item name="android:actionMenuTextAppearance">@style/MenuStyle</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:actionMenuTextColor">@color/textColorDark</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="arrowRight">@drawable/arrow_right</item>
        <item name="alarm">@android:drawable/ic_lock_idle_alarm</item>
        <item name="minute">@drawable/minute_dark</item>
        <item name="buttonStyle">@drawable/button_style_dark</item>
    </style>


</resources>